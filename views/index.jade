		var watchLocation = function() {
			$('input[name=area]:radio').change(function() {
				hideAll();
				var value = $(this).val();
				if (value === 'bos') {
					console.log('GOING TO BOSTON!')
					$('#bosExtra').show();
				} else if (value === 'chi') {
					$('#chiExtra').show();
				} else if (value === 'dal') {
