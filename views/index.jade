				} else if (value === 'sfo') {
					$('#sfoExtra').show();
				} else if (value === 'sea') {
					$('#seaExtra').show();
				} else if (value === 'wdc') {
					$('#wdcExtra').show();
				}
			});
		}
		var hideAll = function() {
			$('#bosExtra').hide();
			$('#chiExtra').hide();
			$('#dalExtra').hide();
			$('#hnlExtra').hide();
			$('#laxExtra').hide();
			$('#nycExtra').hide();
			$('#phxExtra').hide();
			$('#sfoExtra').hide();
			$('#seaExtra').hide();
			$('#wdcExtra').hide();
		}
		$(document).ready(function() {
			hideAll();
			console.log('YO YO');
			watchLocation();
		});
